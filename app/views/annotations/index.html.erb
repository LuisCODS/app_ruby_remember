<p id="notice"><%= notice %></p>

<h1>Annotations</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Body</th>
      <th>Friend</th>
      <th colspan="3">ACTIONS</th>
    </tr>
  </thead>
  <tbody>
    <% @annotations.each do |annotation| %>
      <tr>
        <td><i><%= annotation.body %></i></td>
        <td><%= annotation.friend.name %></td>
        <td><strong><%= link_to 'Show', annotation %></strong></td>
        <td><strong><%= link_to 'Edit', edit_annotation_path(annotation) %></strong></td>
        <td><strong><%#= link_to 'Destroy', annotation, method: :delete, data: { confirm: 'Are you sure?' } %></strong></td>
        <td><a href="/annotations/destroy/<%= annotation.id %>">Destroy</a> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<!-- render page links in the view: -->
<%= will_paginate @annotations %>
<br>
<%= link_to 'New Annotation', new_annotation_path %>
