<p id="notice"><%= notice %></p>

<%= form_tag(friends_path, :method => :get) do %>
  <%= text_field_tag 'to_search', nil, placeholder: 'Enter search term...' %>
  <%= submit_tag "Find" %>
<% end %>

<h1>Friends</h1>

<table class="table table-striped">
<thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Sex</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.name %></td>
        <td><%= friend.address %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.sex %></td>
        <td><%= link_to 'Show', friend %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%#= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><a href="/friends/destroy/<%= friend.id %>">Destroy</a> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<!-- render page links in the view: -->
<%= will_paginate @friends %>
<br>

<%= link_to 'New Friend', new_friend_path %>
